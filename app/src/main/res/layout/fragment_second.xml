    android:layout_height="match_parent">

    <com.grantsome.myviewtestfirst.MyThirdView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.grantsome.myviewtestfirst.QQItemViewFirst
        app:drawable="@drawable/boy_second"
        android:id="@+id/first_item_view"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.grantsome.myviewtestfirst.QQItemViewFirst
        app:drawable="@drawable/boy_first"
        android:id="@+id/second_item_view"
        android:layout_marginTop="200dp"
